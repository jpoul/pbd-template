#!/bin/bash

# Post-commit hook to update todo.md based on task IDs in commit messages

# Get the last commit message
COMMIT_MSG=$(git log -1 --pretty=%B)

echo "üîç Checking commit message for task references: $COMMIT_MSG"

# Path to update-todo.sh script
UPDATE_SCRIPT="$(dirname "$0")/../update-todo.sh"

# Check if update script exists and is executable
if [ -f "$UPDATE_SCRIPT" ] && [ -x "$UPDATE_SCRIPT" ]; then
    echo "üìù Running todo update script..."
    "$UPDATE_SCRIPT" "$COMMIT_MSG"
    EXIT_CODE=$?
    
    if [ $EXIT_CODE -eq 0 ]; then
        echo "‚úÖ Todo update completed successfully."
    else
        echo "‚ö†Ô∏è Todo update encountered an issue (exit code: $EXIT_CODE)."
    fi
else
    echo "‚ùå Error: Update script not found or not executable at $UPDATE_SCRIPT"
fi

exit 0